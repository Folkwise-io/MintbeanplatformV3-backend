{
  "name": "mintbean-platform-v3-backend",
  "version": "1.0.0",
  "private": "true",
  "description": "",
  "main": "src/index.ts",
  "scripts": {
    "start": "ts-node src/index.ts",
    "build": "tsc --build src test",
    "dev": "concurrently \"nodemon -x ts-node ./src/index.ts -w ./src\" \"graphql-codegen -w ./src/graphql/**/*.ts\"",
    "knex": "node -r dotenv/config ./node_modules/knex/bin/cli.js --knexfile ./src/db/knexfile.ts --knexpath ./src/db/",
    "knex:test": "cross-env DOTENV_CONFIG_PATH=./test/.env.test node -r dotenv/config ./node_modules/knex/bin/cli.js --knexfile ./src/db/knexfile.ts --knexpath ./src/db/",
    "gen-types": "graphql-codegen",
    "postgres": "docker-compose -f ./db/docker-compose.yml up",
    "pristine": "yarn reset:db && yarn knex migrate:latest && yarn knex seed:run && yarn knex:test migrate:latest",
    "psql": "docker exec -it db-mintbean-v3 psql -U mintbean -d mintbean_development_v3",
    "reset:db": "docker exec -it db-mintbean-v3 psql -U postgres -f /docker-entrypoint-initdb.d/init.sql",
    "tdd": "cross-env DOTENV_CONFIG_PATH=./test/.env.test node -r dotenv/config node_modules/jest/bin/jest.js --watch --runInBand --coverage=false",
    "test": "cross-env DOTENV_CONFIG_PATH=./test/.env.test node -r dotenv/config node_modules/jest/bin/jest.js --runInBand"
  },
  "author": "",
  "license": "UNLICENSED",
  "dependencies": {
    "@sendgrid/mail": "7.2.6",
    "apollo-server-express": "2.17.0",
    "bcryptjs": "2.4.3",
    "cookie-parser": "1.4.5",
    "cron": "1.8.2",
    "dotenv": "8.2.0",
    "express": "4.17.1",
    "graphql": "15.3.0",
    "graphql-depth-limit": "1.1.0",
    "graphql-iso-date": "3.6.1",
    "ics": "2.25.0",
    "jsonwebtoken": "8.5.1",
    "knex": "0.21.5",
    "moment-timezone": "0.5.31",
    "pg": "8.3.2",
    "ts-node": "9.0.0",
    "yup": "0.29.3"
  },
  "devDependencies": {
    "@graphql-codegen/cli": "1.17.8",
    "@graphql-codegen/typescript": "1.17.8",
    "@graphql-codegen/typescript-resolvers": "1.17.8",
    "@types/bcryptjs": "2.4.2",
    "@types/cookie-parser": "1.4.2",
    "@types/express": "4.17.7",
    "@types/graphql-depth-limit": "1.1.2",
    "@types/graphql-iso-date": "3.4.0",
    "@types/graphql-type-uuid": "0.2.3",
    "@types/node": "14.6.0",
    "@types/set-cookie-parser": "0.0.6",
    "@types/supertest": "2.0.10",
    "@types/yup": "0.29.7",
    "apollo-server-testing": "2.17.0",
    "apollo-server-types": "0.5.1",
    "concurrently": "5.3.0",
    "cross-env": "7.0.2",
    "graphql-type-uuid": "0.2.0",
    "jest": "26.4.2",
    "nodemon": "2.0.4",
    "set-cookie-parser": "2.4.6",
    "supertest": "4.0.2",
    "ts-jest": "26.3.0",
    "typescript": "4.0.2"
  }
}
